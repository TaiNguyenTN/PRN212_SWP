<Window x:Class="ADNTesting.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNTesting"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="LOGIN" HorizontalAlignment="Left" Height="54" Margin="332,10,0,0" VerticalAlignment="Top" Width="190" FontSize="35"/>
        <Label Content="Tên đăng nhập" HorizontalAlignment="Left" Height="40" Margin="239,97,0,0" VerticalAlignment="Top" Width="126" FontSize="15"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="40" Margin="387,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" TabIndex="1"/>
        <Label Content="Mật khẩu" HorizontalAlignment="Left" Height="40" Margin="239,156,0,0" VerticalAlignment="Top" Width="126" FontSize="15"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Height="43" Margin="239,227,0,0" VerticalAlignment="Top" Width="126" TabIndex="3" Click="btnLogin_Click"/>
        <Button x:Name="btnQuit" Content="Quit" HorizontalAlignment="Left" Height="43" Margin="432,227,0,0" VerticalAlignment="Top" Width="126" TabIndex="4" Click="btnQuit_Click"/>
        <Button x:Name="btnRegisterNow" Content="Đăng kí ngay" HorizontalAlignment="Left" Height="43" Margin="313,303,0,0" VerticalAlignment="Top" Width="182" TabIndex="5" Click="btnRegister_Click"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Height="40" Margin="387,156,0,0" VerticalAlignment="Top" Width="158" TabIndex="2"/>

    </Grid>
</Window>
